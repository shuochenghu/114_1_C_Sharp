using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Windows.Forms;

namespace Program6_5
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }
            double oil, lube, radiator, transmission, inspection, replace, tire, 
                   parts, labor, tax, total;

        private void button1_Click(object sender, EventArgs e)
        {
            
            label7.Text = (labor + OilLubeCharges() + FlushCharges() + MiscCharges()).ToString("c");

            if (textBox1.Text == "")
            {
                label8.Text = "$0";
            }
            else
            {
                label8.Text = "$"+textBox1.Text.ToString();
            }

            label9.Text = (TaxCharges()).ToString("c");
            label10.Text = (TotalCharges()).ToString("c");
        }

        private double OilLubeCharges()
        {
            if (checkBox1.Checked)
            {
                oil = 26;
            }
            else
            {
                oil = 0;
            }
            if (checkBox2.Checked)
            {
                lube = 18;
            }
            else
            {
                lube = 0;
            }

            return (oil + lube);
        }

        private double FlushCharges()
        {
            if (checkBox3.Checked)
            {
                radiator = 30;
            }
            else
            {
                radiator = 0;
            }
            if (checkBox4.Checked)
            {
                transmission = 80;
            }
            else
            {
                transmission = 0;
            }

            return (radiator + transmission);
        }

        private double MiscCharges()
        {
            if (checkBox5.Checked)
            {
                inspection = 15;
            }
            else
            {
                inspection = 0;
            }
            if (checkBox6.Checked)
            {
                replace = 100;
            }
            else
            {
                replace = 0;
            }
            if (checkBox7.Checked)
            {
                tire = 20;
            }
            else
            {
                tire = 0;
            }
            return (inspection + replace + tire);
        }

        private double OtherCharges()
        {
            if (!double.TryParse(textBox1.Text, out parts))
            {
                parts = 0;
            }
            if (!double.TryParse(textBox2.Text, out labor))
            {
                labor = 0;
            }
            return (parts + labor);
        }
        private double TaxCharges()
        {
            if (double.TryParse(textBox1.Text, out parts))
            {
                tax = parts * 0.06;
            }
            else
            {
                tax = 0;
            }
            return tax;
        }

        private double TotalCharges()
        {
            total = OilLubeCharges() + FlushCharges() + MiscCharges() + OtherCharges() + TaxCharges();
            return total;
        }

        private void button2_Click(object sender, EventArgs e)
        {
            ClearOilLube();
            ClearFlushes();
            ClearMisc();
            ClearOther();
            ClearFees();
        }

        private void ClearOilLube()
        {
            checkBox1.Checked = false;
            checkBox2.Checked = false;
        }
        private void ClearFlushes()
        {
            checkBox3.Checked = false;
            checkBox4.Checked = false;
        }
        private void ClearMisc()
        {
            checkBox5.Checked = false;
            checkBox6.Checked = false;
            checkBox7.Checked = false;
        }
        private void ClearOther()
        {
            textBox1.Text = "";
            textBox2.Text = "";
        }
        private void ClearFees()
        {
            label7.Text = "";
            label8.Text = "";
            label9.Text = "";
            label10.Text = "";
        }

        private void button3_Click(object sender, EventArgs e)
        {
            this.Close();
        }
    }
}
