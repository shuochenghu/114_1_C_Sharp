using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Windows.Forms;

namespace Program6_10
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        Random rand = new Random();
        string compChoice, myChoice, winner;

        private void Form1_Load(object sender, EventArgs e)
        {
            getCompChoice();
        }

        // 取得電腦的選擇
        private void getCompChoice()
        {
            label1.Text = "";

            switch (rand.Next(3) + 1)
            {
                case 1: compChoice = "石頭"; break;
                case 2: compChoice = "布"; break;
                case 3: compChoice = "剪刀"; break;
            }
        }

        // 顯示獲勝者
        private void showWinner()
        {
            if (myChoice == "石頭" && compChoice == "剪刀")
            {
                winner = "玩家";
            }
            else if (myChoice == "剪刀" && compChoice == "石頭")
            {
                winner = "電腦";
            }
            else if (myChoice == "剪刀" && compChoice == "布")
            {
                winner = "玩家";
            }
            else if (myChoice == "布" && compChoice == "剪刀")
            {
                winner = "電腦";
            }
            else if (myChoice == "布" && compChoice == "石頭")
            {
                winner = "玩家";
            }
            else if (myChoice == "石頭" && compChoice == "布")
            {
                winner = "電腦";
            }
            else
            {
                winner = "平手";
            }

            label1.Text = "電腦選擇：" + compChoice + "\n" +
                   "獲勝者：" + winner;
        }

        // 玩家選擇石頭
        private void button1_Click(object sender, EventArgs e)
        {
            myChoice = "石頭";
            showWinner();
        }

        // 玩家選擇布
        private void button2_Click(object sender, EventArgs e)
        {
            myChoice = "布";
            showWinner();
        }

        // 玩家選擇剪刀
        private void button3_Click(object sender, EventArgs e)
        {
            myChoice = "剪刀";
            showWinner();
        }

        // 重新開始遊戲
        private void button4_Click(object sender, EventArgs e)
        {
            getCompChoice();
        }


    }
}
