using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Fuel_Economy_with_TryParse
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        // 當使用者按下「計算油耗」按鈕時會觸發此事件處理程序
        private void calculateButton_Click(object sender, EventArgs e)
        {
            // 讀取使用者輸入：公里與公升（文字框）
            string kilometersText = milesTextBox.Text; // milesTextBox 現在用來輸入公里
            string litersText = gallonsTextBox.Text;   // gallonsTextBox 現在用來輸入公升

            // 解析成浮點數，使用 double.TryParse 避免例外
            if (!double.TryParse(kilometersText, out double kilometers))
            {
                MessageBox.Show("請輸入有效的公里數 (例如: 120.5)", "輸入錯誤", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                milesTextBox.Focus();
                return;
            }

            if (!double.TryParse(litersText, out double liters))
            {
                MessageBox.Show("請輸入有效的公升數 (例如: 8.3)", "輸入錯誤", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                gallonsTextBox.Focus();
                return;
            }

            // 驗證數值必須為正
            if (kilometers <= 0)
            {
                MessageBox.Show("公里數必須大於 0。", "輸入錯誤", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                milesTextBox.Focus();
                return;
            }

            if (liters <= 0)
            {
                MessageBox.Show("公升數必須大於 0。", "輸入錯誤", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                gallonsTextBox.Focus();
                return;
            }

            // 計算每公升可行駛公里數 (km per liter)
            double kmPerLiter = kilometers / liters;

            // 顯示結果到介面上，格式化為小數點後兩位
            mpgLabel.Text = kmPerLiter.ToString("F2") + " km/L";
        }

        private void exitButton_Click(object sender, EventArgs e)
        {
            // 關閉視窗
            this.Close();
        }
    }
}
